@{
    ViewData["Title"] = "Submit Claim";
}
<h2 class="text-primary">Submit a Claim</h2>
<form>
    <div class="mb-3">
        <label for="hoursWorked" class="form-label">Hours Worked</label>
        <input type="number" class="form-control" id="hoursWorked" />
    </div>
    <div class="mb-3">
        <label for="hourlyRate" class="form-label">Hourly Rate</label>
        <input type="number" class="form-control" id="hourlyRate" />
    </div>
    <div class="mb-3">
        <label for="supportingDoc" class="form-label">Upload Supporting Document</label>
        <input type="file" class="form-control" id="supportingDoc" />
    </div>
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>
