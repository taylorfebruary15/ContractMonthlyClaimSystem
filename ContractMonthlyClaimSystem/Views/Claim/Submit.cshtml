@{
    ViewData["Title"] = "Submit Claim";
}
<h2>Submit Monthly Claim</h2>


<form asp-controller="Claim" asp-action="Submit" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Claim Month</label>
        <input class="form-control" type="month" name="ClaimMonth" required />
    </div>


    <h5>Claim Items</h5>
    <div id="claim-items">
        <div class="row mb-2">
            <div class="col-3"><input class="form-control" type="date" name="Items[0].Date" /></div>
            <div class="col-2"><input class="form-control" type="number" step="0.1" name="Items[0].Hours" /></div>
            <div class="col-2"><input class="form-control" type="number" step="0.01" name="Items[0].HourlyRate" /></div>
            <div class="col-4"><input class="form-control" name="Items[0].Description" placeholder="Description" /></div>
        </div>
    </div>


    <div class="mb-3">
        <label class="form-label">Supporting Documents</label>
        <input class="form-control" type="file" name="files" multiple />
    </div>


    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>
